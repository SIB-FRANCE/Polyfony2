{
	"name":"sib-retail/polyfony",
	"description":"Polyfony is a simple and powerfull PHP micro-framework",
	"keywords": ["lightweight", "fast", "php", "framework"],	
	"version":"2.1.7",
	"license":"GPL-3.0",
	"type":"project",
	"authors":[
		{
			"name":"AnnoyingTechnology"
		}
	],
	"require":{
		"php":">=7.1.0",
		"ext-mbstring":"*",
		"ext-sqlite3":"*",
		"ext-pdo":"*",
		"phpmailer/phpmailer": "^6.0",
		"matthiasmullie/minify": "^1.3",
		"sib-retail/polyfony-google": "dev-master",
		"sib-retail/polyfony-bootstrap": "dev-master",
		"sib-retail/polyfony-sync": "dev-master"
	},
	"suggest": {
		"intervention/image": "^2.4",
		"php-curl-class/php-curl-class": "^8.0",
		"symfony/filesystem": "^4.0",
		"gargron/fileupload": "^1.4"
	},
	"config": {
		"vendor-dir": "Private/Vendor",
		"bin-dir": "Private/Binaries",
		"data-dir": "Private/Storage/Data",
		"cache-dir": "Private/Storage/Cache",
		"archive-dir": "Private/Storage/Data/Archives",
		"htaccess-protect": false
	},
	"autoload": {
		"psr-4": {
			"Models\\": "Private/Models",
			"Polyfony\\": "Private/Polyfony"
		}
	},
	"scripts": {
        "post-create-project-cmd": [
            "chown -R www-data:www-data Private/Storage Public/Assets",
            "chmod -R 777 Private/Storage Public/Assets"
        ]
    }
}
